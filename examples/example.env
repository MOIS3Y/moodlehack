# ============================================================================ #
#                       Moodlehack Environment Variables                       #
# ============================================================================ #
# All variables use prefix MOODLEHACK_ (single underscore).                    #
# Nested settings use double underscore (__).                                  #
# ============================================================================ #

# ---------------------------------------------------------------------------- #
#                                Django Core                                   #
# ---------------------------------------------------------------------------- #

# Debug mode - NEVER enable in production!
MOODLEHACK_DJANGO__DEBUG=false

# Secret key for cryptographic signing - MUST be changed!
MOODLEHACK_DJANGO__SECRET_KEY=django-insecure-change-me-immediately

# Allowed hosts (comma-separated)
MOODLEHACK_DJANGO__ALLOWED_HOSTS=localhost,127.0.0.1

# Trusted origins for CSRF (comma-separated)
# MOODLEHACK_DJANGO__CSRF_TRUSTED_ORIGINS=https://your-domain.com

# Internal IPs (comma-separated)
MOODLEHACK_DJANGO__INTERNAL_IPS=127.0.0.1

# ---------------------------------------------------------------------------- #
#                                Django Database                               #
# ---------------------------------------------------------------------------- #

# Database engine
MOODLEHACK_DJANGO__DATABASE__ENGINE=sqlite3

# Database name (SQLite) or name (PostgreSQL/MySQL)
MOODLEHACK_DJANGO__DATABASE__NAME=db.sqlite3

# PostgreSQL/MySQL credentials
# MOODLEHACK_DJANGO__DATABASE__USER=moodlehack
# MOODLEHACK_DJANGO__DATABASE__PASSWORD=secure_password
# MOODLEHACK_DJANGO__DATABASE__HOST=localhost
# MOODLEHACK_DJANGO__DATABASE__PORT=5432

# ---------------------------------------------------------------------------- #
#                                 Django Cache                                 #
# ---------------------------------------------------------------------------- #

# Cache backend
MOODLEHACK_DJANGO__CACHE__BACKEND=locmem

# Cache location
MOODLEHACK_DJANGO__CACHE__LOCATION=django_cache

# ---------------------------------------------------------------------------- #
#                              Internationalization                            #
# ---------------------------------------------------------------------------- #

# Default language
MOODLEHACK_DJANGO__I18N__LANGUAGE_CODE=ru

# Time zone
MOODLEHACK_DJANGO__I18N__TIME_ZONE=UTC

# ---------------------------------------------------------------------------- #
#                              Static & Media Files                            #
# ---------------------------------------------------------------------------- #

# Static files URL
MOODLEHACK_DJANGO__STATIC__URL=/static/

# Static files directory (auto-detected by default)
# MOODLEHACK_DJANGO__STATIC__ROOT=/custom/path/to/static

# Media files URL
MOODLEHACK_DJANGO__MEDIA__URL=/media/

# Media files directory (auto-detected by default)
# MOODLEHACK_DJANGO__MEDIA__ROOT=/custom/path/to/media

# ---------------------------------------------------------------------------- #
#                                  Django Email                                #
# ---------------------------------------------------------------------------- #

# Email backend
MOODLEHACK_DJANGO__EMAIL__BACKEND=console

# SMTP settings
MOODLEHACK_DJANGO__EMAIL__HOST=localhost
MOODLEHACK_DJANGO__EMAIL__PORT=25
# MOODLEHACK_DJANGO__EMAIL__USERNAME=user@example.com
# MOODLEHACK_DJANGO__EMAIL__PASSWORD=email_password
MOODLEHACK_DJANGO__EMAIL__USE_TLS=false
MOODLEHACK_DJANGO__EMAIL__USE_SSL=false

# ---------------------------------------------------------------------------- #
#                             Django Data & Forms                              #
# ---------------------------------------------------------------------------- #

# Maximum form fields
MOODLEHACK_DJANGO__DATA__DATA_UPLOAD_MAX_NUMBER_FIELDS=10000

# ---------------------------------------------------------------------------- #
#                               DRF & API Docs                                 #
# ---------------------------------------------------------------------------- #

# Browsable API (auto-enabled in debug mode)
# MOODLEHACK_DJANGO__REST_FRAMEWORK__BROWSABLE=true

# OpenAPI title (defaults to site label)
# MOODLEHACK_DJANGO__SPECTACULAR__TITLE="Moodle Answers Hub"

# OpenAPI description
MOODLEHACK_DJANGO__SPECTACULAR__DESCRIPTION="Internal API for moodle test answer hub"

# ---------------------------------------------------------------------------- #
#                              Application Branding                            #
# ---------------------------------------------------------------------------- #

# Application name
MOODLEHACK_SITE__LABEL=moodlehack

# Application tagline
MOODLEHACK_SITE__TAGLINE="Knowledge Base"

# ---------------------------------------------------------------------------- #
#                            Uvicorn Server Settings                           #
# ---------------------------------------------------------------------------- #
# Complete Uvicorn configuration reference:
# https://www.uvicorn.org/settings/
# ---------------------------------------------------------------------------- #

# Server host
MOODLEHACK_UVICORN__HOST=127.0.0.1

# Server port
MOODLEHACK_UVICORN__PORT=8000

# Log level
MOODLEHACK_UVICORN__LOGGING__LOG_LEVEL=info

# Access log
MOODLEHACK_UVICORN__LOGGING__ACCESS_LOG=true

# Keep-alive timeout
MOODLEHACK_UVICORN__PERFORMANCE__TIMEOUT_KEEP_ALIVE=5

# Development mode
# MOODLEHACK_UVICORN__ADVANCED__RELOAD=false

# Auto-reload delay
# MOODLEHACK_UVICORN__ADVANCED__RELOAD_DELAY=0.25

# WebSocket max size
# MOODLEHACK_UVICORN__PROTOCOL__WS_MAX_SIZE=16777216

# WebSocket ping interval
# MOODLEHACK_UVICORN__PROTOCOL__WS_PING_INTERVAL=20.0

# WebSocket ping timeout
# MOODLEHACK_UVICORN__PROTOCOL__WS_PING_TIMEOUT=20.0

# Proxy headers
MOODLEHACK_UVICORN__ADVANCED__PROXY_HEADERS=true

# Server header
MOODLEHACK_UVICORN__ADVANCED__SERVER_HEADER=true

# Date header
MOODLEHACK_UVICORN__ADVANCED__DATE_HEADER=true